{
  "name": "calendar-js",
  "version": "1.0.0",
  "description": "Small library that wraps ICAL.js and provide more convenient means for editing",
  "main": "src/index.js",
  "scripts": {
    "build-doc": "./node_modules/.bin/esdoc",
    "lint": "eslint --ext .js src",
    "lint:fix": "eslint --ext .js src --fix",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgehrke/calendar-js.git"
  },
  "keywords": [
    "ical.js",
    "rfc5545",
    "rfc7986"
  ],
  "author": "Georg Ehrke",
  "license": "AGPLv3+",
  "bugs": {
    "url": "https://github.com/georgehrke/calendar-js/issues"
  },
  "homepage": "https://github.com/georgehrke/calendar-js#readme",
  "devDependencies": {
    "@babel/core": "^7.7.0",
    "@babel/preset-env": "^7.6.3",
    "babel-jest": "^24.9.0",
    "esdoc": "^1.1.0",
    "esdoc-standard-plugin": "^1.0.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-loader": "^3.0.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-nextcloud": "^0.3.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^5.2.3",
    "jest": "^24.9.0"
  },
  "dependencies": {
    "ical.js": "^1.3.0",
    "uuid": "^3.3.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coverageDirectory": "./coverage",
    "clearMocks": true,
    "setupFiles": [
      "./node_modules/ical.js/build/ical.js",
      "./tests/assets/loader.js"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "globals": {
      "ICAL": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "standard"
    ],
    "plugins": [
      "node"
    ],
    "rules": {
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "array-bracket-spacing": [
        "error",
        "never"
      ],
      "array-bracket-newline": [
        "error",
        "consistent"
      ],
      "brace-style": "error",
      "indent": [
        "error",
        "tab"
      ],
      "no-tabs": 0,
      "no-console": [
        "error",
        {
          "allow": [
            "error",
            "warn",
            "debug"
          ]
        }
      ],
      "padded-blocks": [
        "error",
        {
          "classes": "always"
        }
      ],
      "operator-linebreak": [
        "error",
        "before"
      ],
      "multiline-ternary": [
        "error",
        "always-multiline"
      ],
      "node/no-unsupported-features/es-syntax": [
        "off"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "esdoc": {
    "source": "./src",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      }
    ]
  }
}
